<Window x:Class="DrawingsStatistic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingsStatistic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid ItemsSource="{Binding DrawingDatas, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Grid.Column="1" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DrawingID, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Header="ID" Width="200"/>
                <DataGridTextColumn Binding="{Binding WorkTime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Header="Время работы" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
