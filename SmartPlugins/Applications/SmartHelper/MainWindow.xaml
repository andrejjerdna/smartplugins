<mah:MetroWindow  x:Class="SmartHelper.MainWindow"
                  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:SmartHelper" 
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  mc:Ignorable="d"
                  Title="SmartHelper" Height="450" Width="800"
                  WindowStartupLocation="CenterScreen">
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <StackPanel Orientation="Horizontal">
                <Button Click="OnButtonClick"  ToolTip="Open up the GitHub site">
                    <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="Settings" />
                </Button>
                <Button Click="OnButtonClick"  ToolTip="Open up the GitHub site">
                    <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="Notification" />
                </Button>
            </StackPanel>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <Grid>
        <ContentControl Content="{Binding InnerContent}">

        </ContentControl>
    </Grid>
</mah:MetroWindow>
